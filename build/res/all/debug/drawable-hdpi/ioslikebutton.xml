<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                    android:startColor="#eeeeee"
                    android:endColor="#cccccc"
                    android:angle="270" />
            <stroke
                    android:width="2dp"
                    android:color="#ccc0c0" />
            <corners
                    android:radius="10dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#aaaaaa"
                    android:endColor="#ffffff"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#ccc0c0" />
            <corners
                    android:radius="10dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>